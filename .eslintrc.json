{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": "error"
  },
  "extends": "airbnb",
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "env": {
    "jest": true
  }
}